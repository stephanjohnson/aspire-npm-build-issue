# ⚠️ DEVELOPMENT ONLY — Disables SSL certificate validation
NODE_TLS_REJECT_UNAUTHORIZED=0

NUXT_PUBLIC_VERSION=development

# Public Environment Variables
NUXT_PUBLIC_API_URL=http://localhost:6500

NUXT_PUBLIC_ENTRA_EXTERNAL_TENANT=
NUXT_PUBLIC_ENTRA_EXTERNAL_TENANT_ID=

# Nuxt Development Environment Variables
# Set this locally (do not commit). Recommended: 32+ random characters.
NUXT_SESSION_PASSWORD=

# Entra External OAuth Configuration
NUXT_OAUTH_ENTRAEXTERNAL_CLIENT_ID=
NUXT_OAUTH_ENTRAEXTERNAL_TENANT=
NUXT_OAUTH_ENTRAEXTERNAL_TENANT_ID=

# OAuth Variables
NUXT_TOKEN_EXPIRY_SKEW_MS=300000                    # 5 minutes